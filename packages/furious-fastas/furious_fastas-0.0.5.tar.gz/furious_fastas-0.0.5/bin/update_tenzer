#!/usr/bin/env python3
import argparse
from furious_fastas.tenzer import update_fastas


if __name__ == "__main__":
    parser = argparse.ArgumentParser(description='Update the fastas the Tenzer way.')
    parser.add_argument("db_path",
                        help="Path to the folder treated as database.")
    args = parser.parse_args()
    update_fastas(db_path = args.db_path)