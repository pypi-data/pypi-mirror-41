<!doctype html>
<html lang="en">
<head>
    <title>{{ tree.name }}</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='pure.css') }}"/>
    <link rel="stylesheet" href="{{ url_for('static', filename='click_web.css') }}"/>
    <link rel="stylesheet" href="{{ url_for('static', filename='panes.css') }}"/>
    <script src="https://unpkg.com/split.js/dist/split.min.js"></script>
    {#    <script src="{{ url_for('static', filename='split.js') }}"></script>#}
    {#    <script src="{{ url_for('static', filename='simpledrag.js') }}"></script>#}
    <script src="{{ url_for('static', filename='panes.js') }}"></script>
    <script src="{{ url_for('static', filename='open_form.js') }}"></script>
    <script src="{{ url_for('static', filename='post_and_read.js') }}"></script>


</head>
<body>
<div class="panes-container">
    <div class="split" id="left-pane">
        <h1>{{ tree.name }} &ndash; {{ tree.help }}</h1>

        <ul>
            <ul>
                {%- for command in tree.childs recursive %}
                    <li>
                        {% if not command.is_group %}
                            <a title="{{ command.help }}"
                               href="javascript:openCommand('{{ command.path }}');">{{ command.name }}</a> &ndash;
                            {{ command.short_help }}
                        {% else %}
                            {{ command.name }} &ndash; {{ command.help }}
                        {% endif %}
                        {%- if command.childs -%}
                            <ul class="submenu">{{ loop(command.childs) }}</ul>
                        {%- endif %}</li>
                {%- endfor %}
            </ul>

        </ul>
    </div>
    {#    <div class="panes-separator" id="panes-separator"></div>#}
    <div class="split" id="right-pane">

        <div id="form-div">
            <p>Select a command in right pane.</p>
        </div>
    </div>
</div>

</body>
</html>